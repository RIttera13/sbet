<div class="fix-table">
  <div id="filterrific_results">
    <div class="text-center scroll table-content">
      <table class="table table-fixed table-bordered">
        <thead>
          <tr class='patient-list-header-font text-center'>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :first_name, options = {label: "First Name"}) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :last_name, options = {label: "Last Name"}) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :dob, options = {label: "DOB"}) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :mr, options = {label: "Medical Record"}) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :created_at, options = {label: "Created At"}) %></th>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% patients.each do |patient| %>
                <tr class='patient-list-font'>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= link_to(patient.first_name, patient_path(patient), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#mymodal'}) %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= link_to(patient.last_name, patient_path(patient), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#mymodal'}) %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= patient.dob.to_date.strftime("%m-%d-%Y")  %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= patient.mr %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= patient.created_at.to_date.strftime("%m-%d-%Y") %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= link_to "Edit", edit_patient_path(patient), {:remote => true, 'data-toggle' =>  "modal", class: 'btn btn-success upgrade', style: 'margin-right: 10px', 'data-target' => '#mymodal'} %></p>
                  </td>
                  <td class="col col-md-auto">
                    <p class="text-center"><%= link_to "Delete", patient_path(patient), method: :delete, class: 'btn btn-danger user-delete', data: { confirm: 'Are you sure you want to delete this Transfer?' } %></p>
                  </td>
                </tr>
          <% end %>
        </tbody>

      </table>
    </div>
    <%= page_entries_info patients %>
    <span class="download-links">
      Download:
      <%= link_to "CSV", patients_path(format: "csv") %>
    </span>
    <%= will_paginate patients, class: 'pull-right'%>
  </div>
</div>
