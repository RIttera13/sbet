<div class="modal-body">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  <h1 class="profile-underline">Edit Transfer for <%= @patient.first_name %> <%= @patient.last_name %></h1>
  </br>

  <%= form_for @patient do |f| %>
    <div class="field">
      <%= f.label :first_name, 'First Name:  ' %>
      <%= f.text_field :first_name, :value => @patient.first_name, :required => true, autofocus: true %>
    </div>
    </br>
    <div class="field">
      <%= f.label :middle_name, 'Middle Name:  ' %>
      <%= f.text_field :middle_name, :value => @patient.middle_name %>
    </div>
    </br>
    <div class="field">
      <%= f.label :last_name, 'Last Name:  ' %>
      <%= f.text_field :last_name, :value => @patient.last_name, :required => true %>
    </div>
    </br>
    <div class="field">
      <%= f.label :mr, 'Medical Record:  ' %>
      <%= f.text_field :mr, :value => @patient.mr, :required => true %>
    </div>
    </br>
    <div class="field ">
      <%= f.label :dob, 'Date of Birth:  ' %>
      <%= f.date_field :dob, :value => @patient.dob.to_date, :required => true %>
    </div>
    </br>
    <div class="field">
      <%= f.label :gender, 'Gender:  ' %>
      <%= f.select :gender, Patient.genders.keys.map {|gender| [gender.titleize, gender]}, :value => @patient.gender %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit "Submit Transfer Edit", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
